@model IEnumerable<MagicSing.Models.Music>

@{
    ViewBag.Title = "List";
}

<h1 class="display-4">Music List</h1>

<button type="button" class="btn btn-success">@Html.ActionLink("Add New", "New", null, new { @class = "classname" })</button>

@using (@Html.BeginForm("List", "Music", FormMethod.Get))
{
    <br />
    @Html.TextBox("search", null, new { placeholder = "Search Title"}) <input type="submit" value="search" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Album)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.ActionLink("Play", "Play", new { id = item.MusicID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.MusicID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MusicID })
            </td>
        </tr>
    }
</table>
